{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ReMakeplace Launcher",
  "version": "1.2.1",
  "identifier": "com.remakeplaceupdater.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ReMakeplace Launcher",
        "width": 600,
        "height": 650,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "center": true,
        "minWidth": 600,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  }
}
