{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "RMP Companion",
  "version": "1.2.9",
  "identifier": "com.remakeplaceupdater.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "RMP Companion",
        "width": 600,
        "height": 690,
        "resizable": true,
        "minimizable": true,
        "maximizable": true,
        "closable": true,
        "center": true,
        "minWidth": 600,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src ipc: http://ipc.localhost; img-src 'self' asset: http://asset.localhost data:; style-src 'self' 'unsafe-inline'",
      "assetProtocol": {
        "enable": true,
        "scope": ["$LOCALAPPDATA/ReMakeplaceLauncher/gallery/images/**", "$HOME/.local/share/ReMakeplaceLauncher/gallery/images/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["makeplace"]
      }
    }
  }
}
